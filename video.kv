
<VideoScreen@MDScreen>:
    name: "vid_screen"
    id : vid_screen
    on_leave : print("leaving..");video_player.state = 'stop'
    MDBoxLayout:
        orientation: "vertical"
     
        MDGridLayout:
            cols: 1 #orientation: "vertical"
            id: vid_box
            ScrollView:
                id : sv_video
                MDBoxLayout:
                    id : box_video_label
                    adaptive_height: True
                    orientation: "vertical"
                    padding: 10
                    MDLabel:
                        adaptive_height: True
                        id : video_label
                        markup: True
                            
        VideoPlayer:
            padding: 10

            #pos_hint: {'top': 1.0}
            #adaptive_height: False
            height: 400
            size_hint : 1 , None
            id : video_player 
            no_cache : False
            options: {'allow_stretch': True}
       
