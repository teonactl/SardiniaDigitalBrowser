
<ImageScreen>:
    name :"img_screen"
    id : img_screen
    on_leave :  scatter.scale = 1; scatter.rotation = 0
    MDBoxLayout:
        id :gen
        orientation: "vertical"
        padding : 10

        MDGridLayout:
            cols: 1 #orientation: "vertical"
            size_hint_y : .4
            ScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    padding: 10
                    MDLabel:
                        adaptive_height: True
                        id : img_label
                        markup: True
                            

        MyScatter:
            id : scatter
            #on_size: self.center = img_screen.center
            size: image.size
            size_hint: None, None
            do_translation_y : False
            do_collide_after_children :False
            AsyncImage:
                id: image
                nocache : False
                source: '' 
                    #on_load_fail : print("LOADED",app.res_link)

                    # create initial image to be 400 pixels width
                size: 400, 400 / self.image_ratio

         